<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const closeIcon = document.getElementById('close-icon');
    const mobileServicesToggle = document.getElementById('mobile-services-toggle');
    const mobileServicesDropdown = document.getElementById('mobile-services-dropdown');
    const mobileServicesArrow = document.getElementById('mobile-services-arrow');
    const mobileLocationsToggle = document.getElementById('mobile-locations-toggle');
    const mobileLocationsDropdown = document.getElementById('mobile-locations-dropdown');
    const mobileLocationsArrow = document.getElementById('mobile-locations-arrow');

    if (!mobileMenuButton || !mobileMenu || !hamburgerIcon || !closeIcon) return;

    let isOpen = false;
    let servicesOpen = false;
    let locationsOpen = false;

    function toggleMenu() {
      isOpen = !isOpen;

      if (isOpen) {
        mobileMenu.classList.remove('hidden');
        hamburgerIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
        mobileMenuButton.setAttribute('aria-expanded', 'true');
      } else {
        mobileMenu.classList.add('hidden');
        hamburgerIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
        
        // Also close services dropdown when main menu closes
        if (servicesOpen && mobileServicesDropdown && mobileServicesArrow) {
          servicesOpen = false;
          mobileServicesDropdown.classList.add('hidden');
          mobileServicesArrow.style.transform = 'rotate(0deg)';
        }
        
        // Also close locations dropdown when main menu closes
        if (locationsOpen && mobileLocationsDropdown && mobileLocationsArrow) {
          locationsOpen = false;
          mobileLocationsDropdown.classList.add('hidden');
          mobileLocationsArrow.style.transform = 'rotate(0deg)';
        }
      }
    }

    // Main menu toggle
    mobileMenuButton.addEventListener('click', (e) => {
      e.preventDefault();
      toggleMenu();
    });

    // Close menu when clicking links
    const mobileMenuLinks = mobileMenu.querySelectorAll('a');
    mobileMenuLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (isOpen) toggleMenu();
      });
    });

    // Close menu when clicking outside
    document.addEventListener('click', (event) => {
      if (isOpen && 
          event.target &&
          !mobileMenu.contains(event.target as Node) && 
          !mobileMenuButton.contains(event.target as Node)) {
        toggleMenu();
      }
    });

    // Mobile services dropdown functionality
    if (mobileServicesToggle && mobileServicesDropdown && mobileServicesArrow) {
      mobileServicesToggle.addEventListener('click', (e) => {
        e.preventDefault();
        servicesOpen = !servicesOpen;

        if (servicesOpen) {
          mobileServicesDropdown.classList.remove('hidden');
          mobileServicesArrow.style.transform = 'rotate(180deg)';
        } else {
          mobileServicesDropdown.classList.add('hidden');
          mobileServicesArrow.style.transform = 'rotate(0deg)';
        }
      });
    }

    // Mobile locations dropdown functionality
    if (mobileLocationsToggle && mobileLocationsDropdown && mobileLocationsArrow) {
      mobileLocationsToggle.addEventListener('click', (e) => {
        e.preventDefault();
        locationsOpen = !locationsOpen;

        if (locationsOpen) {
          mobileLocationsDropdown.classList.remove('hidden');
          mobileLocationsArrow.style.transform = 'rotate(180deg)';
        } else {
          mobileLocationsDropdown.classList.add('hidden');
          mobileLocationsArrow.style.transform = 'rotate(0deg)';
        }
      });
    }
  });
</script>
