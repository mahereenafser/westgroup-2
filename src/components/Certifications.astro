---
// Certifications and Awards component
import ResponsiveImage from './ResponsiveImage.astro';
---

<section class="py-8 px-4 sm:px-6 lg:px-8 bg-dark-800/40">
  <div class="container-custom mx-auto">
    <div class="text-center mb-10 observe-scroll">
      <h2 class="text-4xl lg:text-5xl font-bold mb-6">
        <span class="text-white">Trusted &</span>
        <span class="gradient-text"> Recognized</span>
      </h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
        Our commitment to excellence is validated by prestigious industry certifications and awards.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
      <!-- BBB Accredited -->
      <div class="card text-center observe-scroll group hover:scale-105 transition-transform duration-300">
        <div class="mb-6">
          <a href="https://www.bbb.org/ca/bc/surrey/profile/financial-planning-consultants/westgroup-financial-management-inc-0037-1376947/#sealclick" target="_blank" rel="noopener noreferrer" class="block">
            <div class="w-20 h-20 mx-auto bg-white rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
              <ResponsiveImage 
                src="/images/awards/bbb-accredited.webp" 
                alt="Better Business Bureau A+ Rating - WestGroup Financial Management" 
                class="w-16 h-16 object-contain" 
                loading="lazy"
                width={64}
                height={64}
              />
            </div>
          </a>
          <h3 class="text-lg font-semibold text-white mb-2">BBB Accredited</h3>
          <p class="text-sm text-gray-400 leading-relaxed">
            Better Business Bureau accreditation demonstrates our commitment to ethical business practices and superior customer service standards.
          </p>
        </div>
        <div class="text-primary-400 text-sm font-medium">A+ Rating</div>
        <div class="text-gray-400 text-xs mt-2">
          A+ As of 7/20/2022<br>
          <a href="https://www.bbb.org/ca/bc/surrey/profile/financial-planning-consultants/westgroup-financial-management-inc-0037-1376947/#sealclick" target="_blank" rel="noopener noreferrer" class="text-primary-400 hover:text-primary-300 transition-colors">Click for profile</a>
        </div>
      </div>

      <!-- Three Best Rated -->
      <div class="card text-center observe-scroll group hover:scale-105 transition-transform duration-300">
        <div class="mb-6">
          <a href="https://threebestrated.ca/financial-services-in-surrey-bc" target="_blank" rel="noopener noreferrer" class="block">
            <div class="w-20 h-20 mx-auto bg-white rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
              <ResponsiveImage 
                src="/images/awards/three-best-rated.webp" 
                alt="ThreeBestRated Financial Advisor Award - WestGroup Financial Vancouver BC" 
                class="w-16 h-16 object-contain" 
                loading="lazy"
                width={64}
                height={64}
              />
            </div>
          </a>
          <h3 class="text-lg font-semibold text-white mb-2">ThreeBestRated</h3>
          <p class="text-sm text-gray-400 leading-relaxed">
            Recognized as one of the top three financial planning firms based on customer reviews, satisfaction, and service excellence.
          </p>
        </div>
        <div class="text-accent-400 text-sm font-medium">2nd Best in Surrey</div>
        <div class="text-gray-400 text-xs mt-2">
          4.8/5 (114 reviews)<br>
          <a href="https://threebestrated.ca/financial-services-in-surrey-bc" target="_blank" rel="noopener noreferrer" class="text-primary-400 hover:text-primary-300 transition-colors">View full profile</a>
        </div>
      </div>

      <!-- MDRT Top of Table -->
      <div class="card text-center observe-scroll group hover:scale-105 transition-transform duration-300">
        <div class="mb-6">
          <div class="w-20 h-20 mx-auto bg-white rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <ResponsiveImage 
              src="/images/awards/mdrt-logo.webp" 
              alt="MDRT Top of Table Member - Elite Financial Professional Recognition" 
              class="w-16 h-16 object-contain" 
              loading="lazy"
              width={64}
              height={64}
            />
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">MDRT Top of Table</h3>
          <p class="text-sm text-gray-400 leading-relaxed">
            Million Dollar Round Table's most prestigious recognition, reserved for top 1% of financial professionals worldwide.
          </p>
        </div>
        <div class="text-primary-400 text-sm font-medium">Elite Member</div>
      </div>

      <!-- Consumer Choice Awards -->
      <div class="card text-center observe-scroll group hover:scale-105 transition-transform duration-300">
        <div class="mb-6">
          <a href="https://www.ccaward.com/award-winners/surrey/best-financial-planning-2/westgroup-financial-management-inc/" target="_blank" rel="noopener noreferrer" class="block">
            <div class="w-20 h-20 mx-auto bg-white rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
              <ResponsiveImage 
                src="/images/awards/consumer-choice.webp" 
                alt="Consumer Choice Award Winner - Outstanding Financial Advisory Services" 
                class="w-16 h-16 object-contain" 
                loading="lazy"
                width={64}
                height={64}
              />
            </div>
          </a>
          <h3 class="text-lg font-semibold text-white mb-2">Consumer Choice Award</h3>
          <p class="text-sm text-gray-400 leading-relaxed">
            Voted by consumers as an outstanding business demonstrating excellence in financial advisory services in our local market.
          </p>
        </div>
        <div class="text-accent-400 text-sm font-medium">Award Winner</div>
        <div class="text-gray-400 text-xs mt-2">
          Best Financial Planning Surrey<br>
          <a href="https://www.ccaward.com/award-winners/surrey/best-financial-planning-2/westgroup-financial-management-inc/" target="_blank" rel="noopener noreferrer" class="text-primary-400 hover:text-primary-300 transition-colors">View award profile</a>
        </div>
      </div>

      <!-- Top 100 Magazine -->
      <div class="card text-center observe-scroll group hover:scale-105 transition-transform duration-300">
        <div class="mb-6">
          <div class="w-20 h-20 mx-auto bg-white rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <ResponsiveImage 
              src="/images/awards/top-100.webp" 
              alt="Featured in Top 100 Magazine - WestGroup Financial Management" 
              class="w-16 h-16 object-contain" 
              loading="lazy"
              width={64}
              height={64}
            />
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Top 100 Magazine</h3>
          <p class="text-sm text-gray-400 leading-relaxed">
            Featured in Top 100 Magazine for excellence in financial services and commitment to client success.
          </p>
        </div>
        <div class="text-accent-400 text-sm font-medium">Featured</div>
      </div>
    </div>

    <!-- Trust Indicators -->
    <div class="mt-16 text-center observe-scroll">
      <div class="glass-effect rounded-2xl p-8">
        <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
          <div class="text-center">
            <div class="text-3xl font-bold gradient-text mb-2">3000+</div>
            <p class="text-gray-400 text-sm">Clients Served</p>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold gradient-text mb-2">Fiduciary</div>
            <p class="text-gray-400 text-sm">Always acting in your best interest</p>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold gradient-text mb-2">Fee-Only</div>
            <p class="text-gray-400 text-sm">No commissions, complete transparency</p>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold gradient-text mb-2">Independent</div>
            <p class="text-gray-400 text-sm">Unbiased advice, your goals first</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
