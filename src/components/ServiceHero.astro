---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  buttonText: string;
  buttonLink: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
}

const { 
  title, 
  subtitle, 
  description, 
  buttonText, 
  buttonLink,
  secondaryButtonText,
  secondaryButtonLink 
} = Astro.props;
---

<section class="relative min-h-[75vh] flex items-center justify-center overflow-hidden bg-gradient-to-r from-black via-gray-900 to-black mb-16 pt-32 md:pt-24 pb-16">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-r from-primary-500/10 to-accent-500/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-gradient-to-r from-accent-500/10 to-primary-500/10 rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
  </div>

  <div class="container-custom mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8 mt-8">
        <span class="inline-block px-4 py-2 bg-gradient-to-r from-primary-500/20 to-accent-500/20 rounded-full text-sm font-medium text-primary-300 border border-primary-500/30 animate-fade-in">
          {subtitle}
        </span>
      </div>
      
      <h1 class="text-4xl lg:text-6xl font-bold mb-6 leading-tight animate-slide-up text-white">
        {title}
      </h1>
      
      <p class="text-lg lg:text-xl text-gray-300 mb-8 leading-relaxed animate-slide-up max-w-3xl mx-auto" style="animation-delay: 0.2s;">
        {description}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up" style="animation-delay: 0.4s;">
        <a href={buttonLink} class="btn-primary text-lg px-8 py-4 inline-flex items-center justify-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          {buttonText}
        </a>
        {secondaryButtonText && secondaryButtonLink && (
          <a href={secondaryButtonLink} class="btn-secondary text-lg px-8 py-4 inline-flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            {secondaryButtonText}
          </a>
        )}
      </div>
    </div>
  </div>
</section>