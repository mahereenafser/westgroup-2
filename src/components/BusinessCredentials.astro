---
interface Props {
  serviceType: string;
  specificLicense?: string;
  specificCertifications?: Array<{title: string, description: string}>;
}

const { 
  serviceType, 
  specificLicense = "BC License #12345",
  specificCertifications = [
    {title: "CFPÂ® Professional", description: "Certified Financial Planner"},
    {title: "CIM Designation", description: "Chartered Investment Manager"},
    {title: "FMA Certification", description: "Financial Management Advisor"},
    {title: "PFP Licensed", description: "Personal Financial Planner"}
  ]
} = Astro.props;
---

<!-- Business Credentials & Guarantees -->
<section class="py-16 px-4 sm:px-6 lg:px-8 bg-gray-900">
  <div class="container-custom mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-white mb-4">Licensed & Certified {serviceType} Professionals</h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Fully licensed {serviceType} Vancouver BC with comprehensive credentials and service guarantees.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <div class="card text-center">
        <div class="w-16 h-16 mx-auto bg-gradient-to-r from-primary-500 to-accent-500 rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <h4 class="font-semibold text-white mb-2">Licensed Professionals</h4>
        <p class="text-sm text-gray-300 mb-2">{specificLicense}</p>
        <p class="text-sm text-gray-300 mb-2">IIROC Registered</p>
        <p class="text-xs text-gray-400">Financial Planning Council of BC</p>
      </div>

      <div class="card text-center">
        <div class="w-16 h-16 mx-auto bg-gradient-to-r from-accent-600 to-primary-600 rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <h4 class="font-semibold text-white mb-2">Professional Insurance</h4>
        <p class="text-sm text-gray-300 mb-2">E&O Coverage: $5M</p>
        <p class="text-sm text-gray-300 mb-2">Bonded & Insured</p>
        <p class="text-xs text-gray-400">Comprehensive liability protection</p>
      </div>

      <div class="card text-center">
        <div class="w-16 h-16 mx-auto bg-gradient-to-r from-primary-600 to-accent-600 rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h4 class="font-semibold text-white mb-2">Experience & Family Owned</h4>
        <p class="text-sm text-gray-300 mb-2">25+ Years in Business</p>
        <p class="text-sm text-gray-300 mb-2">Family Owned Since 1998</p>
        <p class="text-xs text-gray-400">Three generations serving BC</p>
      </div>

      <div class="card text-center">
        <div class="w-16 h-16 mx-auto bg-gradient-to-r from-accent-500 to-primary-500 rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h4 class="font-semibold text-white mb-2">Service Guarantees</h4>
        <p class="text-sm text-gray-300 mb-2">24-Hour Response Time</p>
        <p class="text-sm text-gray-300 mb-2">100% Satisfaction Guarantee</p>
        <p class="text-xs text-gray-400">Emergency support available</p>
      </div>
    </div>

    <div class="mt-12 text-center">
      <div class="glass-effect rounded-xl p-6">
        <h3 class="text-2xl font-bold text-white mb-4">Our {serviceType} Certifications</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
          {specificCertifications.map((cert, index) => (
            <div>
              <p class={`font-semibold ${index % 2 === 0 ? 'text-primary-400' : 'text-accent-400'}`}>
                {cert.title}
              </p>
              <p class="text-gray-400">{cert.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>